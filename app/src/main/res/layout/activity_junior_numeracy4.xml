<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.juniorkg.juniornumeracy.JuniorNumeracyActivity4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/header" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twenty"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/hundred"
                    android:layout_height="@dimen/threefifty"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/cubejn4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">



                        <LinearLayout
                            android:id="@+id/yellow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/ten"
                            android:gravity="center"
                            android:background="@drawable/plain_border_without_fill"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/ten"
                                android:textColor="@color/black"
                                android:text="@string/yellow" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/ten"
                            android:background="@drawable/plain_border_without_fill"
                            android:gravity="center"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/ten"
                                android:textColor="@color/black"
                                android:text="@string/blue" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/red"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/ten"
                            android:gravity="center"
                            android:background="@drawable/plain_border_without_fill"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/ten"
                                android:textColor="@color/black"
                                android:text="@string/red" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/ten"
                            android:gravity="center"
                            android:background="@drawable/plain_border_without_fill"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/ten"
                                android:textColor="@color/black"
                                android:text="@string/green" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bluedrop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/ten"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fifteen"
                            android:text="@string/jn1q1" />

                        <TextView
                            android:id="@+id/blueans"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/thirty"
                            android:layout_margin="@dimen/ten"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/fifteen"
                            android:text="Ans: " />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/yellowdrop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/ten"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fifteen"
                            android:text="@string/jn1q2" />

                        <TextView
                            android:id="@+id/yellowans"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/thirty"
                            android:layout_margin="@dimen/ten"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/fifteen"
                            android:text="Ans: " />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/greendrop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/ten"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fifteen"
                            android:text="@string/jn1q3" />

                        <TextView
                            android:id="@+id/greenans"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/thirty"
                            android:layout_margin="@dimen/ten"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/fifteen"
                            android:text="Ans: " />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/reddrop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/ten"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fifteen"
                            android:text="@string/jn1q4" />

                        <TextView
                            android:id="@+id/redans"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/thirty"
                            android:layout_margin="@dimen/ten"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/fifteen"
                            android:text="Ans: " />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/back"
                            android:layout_width="@dimen/onethirty"
                            android:layout_margin="@dimen/twenty"
                            android:layout_gravity="left"
                            android:layout_height="@dimen/fifty"
                            app:cardBackgroundColor="@color/colorAccent"
                            app:cardCornerRadius="@dimen/twenty">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/backwhite"
                                    android:layout_marginLeft="@dimen/ten"
                                    android:layout_marginStart="@dimen/ten"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:gravity="center"
                                    android:layout_height="match_parent"
                                    android:text="@string/back"
                                    android:textColor="@android:color/white"
                                    android:layout_marginLeft="@dimen/ten"
                                    android:layout_marginStart="@dimen/ten"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/twenty"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/next"
                            android:layout_width="@dimen/onethirty"
                            android:layout_margin="@dimen/twenty"
                            android:layout_gravity="right"
                            android:layout_height="@dimen/fifty"
                            app:cardBackgroundColor="@color/colorAccent"
                            app:cardCornerRadius="@dimen/twenty">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/next"
                                    android:gravity="center"
                                    android:textColor="@android:color/white"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/thirtyfive"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/twenty"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/forwardwhite"
                                    android:layout_marginStart="-35sp"
                                    android:layout_gravity="center_vertical"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>