<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".activity.nursery.nurseryliteracy.HelpFrog">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include layout="@layout/header" />

            <LinearLayout
                android:layout_marginTop="@dimen/twenty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <ImageView
                        android:id="@+id/frog_up"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/n1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <ImageView
                        android:id="@+id/none1"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/n2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <ImageView
                        android:id="@+id/none2"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/a_frg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <ImageView
                        android:id="@+id/txt_a"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:text="@string/a"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/twentyfive"
                        android:layout_centerInParent="true"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/b_frg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <ImageView
                        android:id="@+id/txt_b"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:text="@string/b"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/twentyfive"
                        android:layout_centerInParent="true"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/c_frg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <ImageView
                        android:id="@+id/txt_c"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:text="@string/c"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/twentyfive"
                        android:layout_centerInParent="true"
                        android:textStyle="bold" />


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/n3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <ImageView
                        android:id="@+id/none3"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/d_frg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <ImageView
                        android:id="@+id/txt_d"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:text="@string/d"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/twentyfive"
                        android:layout_centerInParent="true"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/e_frg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <ImageView
                        android:id="@+id/txt_e"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:text="@string/e"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/twentyfive"
                        android:layout_centerInParent="true"
                        android:textStyle="bold" />


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/n4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <ImageView
                        android:id="@+id/none4"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/f_frg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <ImageView
                        android:id="@+id/txt_f"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:text="@string/f"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/twentyfive"
                        android:layout_centerInParent="true"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/g_frg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <ImageView
                        android:id="@+id/txt_g"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:text="@string/g"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/twentyfive"
                        android:layout_centerInParent="true"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/pond"
                android:layout_width="250sp"
                android:layout_height="150sp"
                android:layout_gravity="right"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/help_bee_2"
                        android:layout_width="@dimen/onethirty"
                        android:layout_margin="@dimen/twenty"
                        android:layout_gravity="left"
                        android:layout_height="@dimen/fifty"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="@dimen/twenty">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/backwhite"
                                android:layout_marginLeft="@dimen/ten"
                                android:layout_marginStart="@dimen/ten"
                                android:layout_gravity="center_vertical"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="match_parent"
                                android:text="@string/back"
                                android:textColor="@android:color/white"
                                android:layout_marginLeft="@dimen/ten"
                                android:layout_marginStart="@dimen/ten"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textSize="@dimen/twenty"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/small_caps"
                        android:layout_width="@dimen/onethirty"
                        android:layout_margin="@dimen/twenty"
                        android:layout_gravity="right"
                        android:layout_height="@dimen/fifty"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="@dimen/twenty">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/next"
                                android:gravity="center"
                                android:textColor="@android:color/white"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/thirtyfive"
                                android:textStyle="bold"
                                android:textSize="@dimen/twenty"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/forwardwhite"
                                android:layout_marginStart="-35sp"
                                android:layout_gravity="center_vertical"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>