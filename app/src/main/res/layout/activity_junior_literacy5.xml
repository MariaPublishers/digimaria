<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.juniorkg.juniorliteracy.JuniorLiteracyActivity5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/header" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twenty"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/dog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/five"
                        app:cardElevation="0sp"
                        app:cardBackgroundColor="@color/pleasent_green"
                        app:cardCornerRadius="@dimen/twenty">

                        <TextView
                            android:layout_width="@dimen/thirty"
                            android:layout_height="@dimen/thirty"
                            android:text="@string/d"
                            android:textColor="@color/black"
                            android:gravity="center" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/pig"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/five"
                        app:cardElevation="0sp"
                        app:cardBackgroundColor="@color/pleasent_green"
                        app:cardCornerRadius="@dimen/twenty">

                        <TextView
                            android:layout_width="@dimen/thirty"
                            android:layout_height="@dimen/thirty"
                            android:text="@string/p"
                            android:textColor="@color/black"
                            android:gravity="center" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/camel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/five"
                        app:cardElevation="0sp"
                        app:cardBackgroundColor="@color/pleasent_green"
                        app:cardCornerRadius="@dimen/twenty">

                        <TextView
                            android:layout_width="@dimen/thirty"
                            android:layout_height="@dimen/thirty"
                            android:text="@string/c"
                            android:textColor="@color/black"
                            android:gravity="center" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/nest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/five"
                        app:cardElevation="0sp"
                        app:cardBackgroundColor="@color/pleasent_green"
                        app:cardCornerRadius="@dimen/twenty">

                        <TextView
                            android:layout_width="@dimen/thirty"
                            android:layout_height="@dimen/thirty"
                            android:text="@string/n"
                            android:textColor="@color/black"
                            android:gravity="center" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/tub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/five"
                        app:cardElevation="0sp"
                        app:cardBackgroundColor="@color/pleasent_green"
                        app:cardCornerRadius="@dimen/twenty">

                        <TextView
                            android:layout_width="@dimen/thirty"
                            android:layout_height="@dimen/thirty"
                            android:text="@string/t"
                            android:textColor="@color/black"
                            android:gravity="center" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/pigimg"
                            android:layout_width="@dimen/hundred"
                            android:layout_height="@dimen/hundred"
                            android:src="@drawable/pigwithtail" />

                        <ImageView
                            android:id="@+id/dogimg"
                            android:layout_width="@dimen/hundred"
                            android:layout_height="@dimen/hundred"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/dogwithtail" />

                        <ImageView
                            android:id="@+id/camelimg"
                            android:layout_width="@dimen/hundred"
                            android:layout_height="@dimen/hundred"
                            android:layout_marginTop="@dimen/threehundred"
                            android:src="@drawable/camelwithtail" />

                        <ImageView
                            android:id="@+id/nextimg"
                            android:layout_width="@dimen/hundred"
                            android:layout_height="@dimen/hundred"
                            android:layout_marginTop="@dimen/onefourthree"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/nestjl" />

                        <ImageView
                            android:id="@+id/tubimg"
                            android:layout_width="@dimen/hundred"
                            android:layout_height="@dimen/hundred"
                            android:layout_marginTop="@dimen/threefifty"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/tubjl" />

                        <LinearLayout
                            android:id="@+id/layout_word"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="right"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/onetwenty"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/d_drop"
                                    android:layout_gravity="right"
                                    android:layout_width="@dimen/forty"
                                    android:layout_height="@dimen/forty"
                                    android:textSize="@dimen/twentyfive"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:background="@drawable/plain_border" />

                                <TextView
                                    android:layout_gravity="right"
                                    android:layout_width="@dimen/forty"
                                    android:layout_height="@dimen/forty"
                                    android:text="@string/o_cap"
                                    android:textSize="@dimen/twentyfive"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:background="@drawable/plain_border" />


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/p_drop"
                                        android:layout_width="@dimen/forty"
                                        android:layout_height="@dimen/forty"
                                        android:textSize="@dimen/twentyfive"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:background="@drawable/plain_border" />

                                    <TextView
                                        android:layout_width="@dimen/forty"
                                        android:layout_height="@dimen/forty"
                                        android:text="@string/cap_i"
                                        android:textSize="@dimen/twentyfive"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:background="@drawable/plain_border" />

                                    <TextView
                                        android:layout_width="@dimen/forty"
                                        android:layout_height="@dimen/forty"
                                        android:text="@string/g_cap"
                                        android:textSize="@dimen/twentyfive"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:background="@drawable/plain_border" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/n_drop"
                                    android:layout_gravity="right"
                                    android:layout_width="@dimen/forty"
                                    android:layout_height="@dimen/forty"
                                    android:textSize="@dimen/twentyfive"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:layout_marginRight="@dimen/eighty"
                                    android:background="@drawable/plain_border" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/forty"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/c_drop"
                                        android:layout_width="@dimen/forty"
                                        android:layout_height="@dimen/forty"
                                        android:textSize="@dimen/twentyfive"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:background="@drawable/plain_border" />

                                    <TextView
                                        android:layout_width="@dimen/forty"
                                        android:layout_height="@dimen/forty"
                                        android:text="@string/a_cap"
                                        android:textSize="@dimen/twentyfive"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:background="@drawable/plain_border" />

                                    <TextView
                                        android:layout_width="@dimen/forty"
                                        android:layout_height="@dimen/forty"
                                        android:text="@string/m_cap"
                                        android:textSize="@dimen/twentyfive"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:background="@drawable/plain_border" />

                                    <TextView
                                        android:layout_width="@dimen/forty"
                                        android:layout_height="@dimen/forty"
                                        android:text="@string/e_cap"
                                        android:textSize="@dimen/twentyfive"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:background="@drawable/plain_border" />

                                    <TextView
                                        android:layout_width="@dimen/forty"
                                        android:layout_height="@dimen/forty"
                                        android:text="@string/l_cap"
                                        android:textSize="@dimen/twentyfive"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:background="@drawable/plain_border" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_gravity="right"
                                    android:layout_width="@dimen/forty"
                                    android:layout_height="@dimen/forty"
                                    android:layout_marginRight="@dimen/eighty"
                                    android:text="@string/s_cap"
                                    android:textSize="@dimen/twentyfive"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:background="@drawable/plain_border" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/forty"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/t_drop"
                                        android:layout_width="@dimen/forty"
                                        android:layout_height="@dimen/forty"
                                        android:textSize="@dimen/twentyfive"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:background="@drawable/plain_border" />

                                    <TextView
                                        android:layout_width="@dimen/forty"
                                        android:layout_height="@dimen/forty"
                                        android:text="@string/u_cap"
                                        android:textSize="@dimen/twentyfive"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:background="@drawable/plain_border" />

                                    <TextView
                                        android:layout_width="@dimen/forty"
                                        android:layout_height="@dimen/forty"
                                        android:text="@string/b_cap"
                                        android:textSize="@dimen/twentyfive"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:background="@drawable/plain_border" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/back"
                            android:layout_width="@dimen/onethirty"
                            android:layout_margin="@dimen/twenty"
                            android:layout_gravity="left"
                            android:layout_height="@dimen/fifty"
                            app:cardBackgroundColor="@color/colorAccent"
                            app:cardCornerRadius="@dimen/twenty">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/backwhite"
                                    android:layout_marginLeft="@dimen/ten"
                                    android:layout_marginStart="@dimen/ten"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:gravity="center"
                                    android:layout_height="match_parent"
                                    android:text="@string/back"
                                    android:textColor="@android:color/white"
                                    android:layout_marginLeft="@dimen/ten"
                                    android:layout_marginStart="@dimen/ten"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/twenty"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/next"
                            android:layout_width="@dimen/onethirty"
                            android:layout_margin="@dimen/twenty"
                            android:layout_gravity="right"
                            android:layout_height="@dimen/fifty"
                            app:cardBackgroundColor="@color/colorAccent"
                            app:cardCornerRadius="@dimen/twenty">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/next"
                                    android:gravity="center"
                                    android:textColor="@android:color/white"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/thirtyfive"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/twenty"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/forwardwhite"
                                    android:layout_marginStart="-35sp"
                                    android:layout_gravity="center_vertical"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>