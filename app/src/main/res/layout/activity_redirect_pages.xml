<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".activity.mainprocess.RedirectPages">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/header" />

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/colorAccent"
                android:id="@+id/literacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/twenty"
                android:layout_margin="@dimen/twenty">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/seventyfive"
                    android:text="@string/literacy"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/twentyfive"
                    android:layout_marginLeft="@dimen/twentyfive"
                    android:textSize="@dimen/twentyfive" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/numeracy"
                app:cardBackgroundColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/twenty"
                android:layout_margin="@dimen/twenty">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/seventyfive"
                    android:text="@string/numeracy"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/twentyfive"
                    android:layout_marginLeft="@dimen/twentyfive"
                    android:textSize="@dimen/twentyfive" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/general_awarness"
                app:cardBackgroundColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/twenty"
                android:layout_margin="@dimen/twenty">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/seventyfive"
                    android:text="@string/general_awarness"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/twentyfive"
                    android:layout_marginLeft="@dimen/twentyfive"
                    android:textSize="@dimen/twentyfive" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>