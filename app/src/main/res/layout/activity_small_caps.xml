<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".activity.nursery.nurseryliteracy.SmallCaps">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/header" />

            <LinearLayout
                android:layout_marginRight="@dimen/twenty"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginTop="@dimen/twenty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <androidx.cardview.widget.CardView
                    android:id="@+id/d_c"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/seventyfive"
                    app:cardCornerRadius="@dimen/twenty"
                    app:cardElevation="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="40">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/fortyfive"
                        android:textColor="@android:color/black"
                        android:text="@string/d_cap"
                        android:gravity="center"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="10" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/p_s"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/seventyfive"
                    app:cardCornerRadius="@dimen/twenty"
                    app:cardElevation="0dp"
                    android:layout_weight="40">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/fortyfive"
                        android:textColor="@android:color/black"
                        android:text="@string/p"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="@dimen/twenty"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginTop="@dimen/ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <androidx.cardview.widget.CardView
                    android:id="@+id/h_c"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/seventyfive"
                    app:cardCornerRadius="@dimen/twenty"
                    app:cardElevation="0dp"
                    android:layout_weight="40">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/fortyfive"
                        android:textColor="@android:color/black"
                        android:text="@string/h_cap"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="10" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/d_s"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/seventyfive"
                    app:cardCornerRadius="@dimen/twenty"
                    app:cardElevation="0dp"
                    android:layout_weight="40">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/fortyfive"
                        android:textColor="@android:color/black"
                        android:text="@string/d"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="@dimen/twenty"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginTop="@dimen/ten"
                android:layout_width="match_parent"
                android:layout_height="@dimen/seventyfive"
                android:orientation="horizontal" >

                <androidx.cardview.widget.CardView
                    android:id="@+id/b_c"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/seventyfive"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/twenty"
                    android:layout_weight="40">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/fortyfive"
                        android:textColor="@android:color/black"
                        android:text="@string/b_cap"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="10" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/t_s"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/seventyfive"
                    app:cardCornerRadius="@dimen/twenty"
                    app:cardElevation="0dp"
                    android:layout_weight="40">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/fortyfive"
                        android:textColor="@android:color/black"
                        android:text="@string/t"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="@dimen/twenty"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginTop="@dimen/ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <androidx.cardview.widget.CardView
                    android:id="@+id/p_c"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/seventyfive"
                    app:cardCornerRadius="@dimen/twenty"
                    app:cardElevation="0dp"
                    android:layout_weight="40">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/fortyfive"
                        android:textColor="@android:color/black"
                        android:text="@string/p_cap"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="10" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/b_s"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/seventyfive"
                    app:cardCornerRadius="@dimen/twenty"
                    app:cardElevation="0dp"
                    android:layout_weight="40">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/fortyfive"
                        android:textColor="@android:color/black"
                        android:text="@string/b"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="@dimen/twenty"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginTop="@dimen/ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <androidx.cardview.widget.CardView
                    android:id="@+id/t_c"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/seventyfive"
                    app:cardCornerRadius="@dimen/twenty"
                    app:cardElevation="0dp"
                    android:layout_weight="40">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/fortyfive"
                        android:textColor="@android:color/black"
                        android:text="@string/t_cap"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="10" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/h_s"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/seventyfive"
                    app:cardCornerRadius="@dimen/twenty"
                    app:cardElevation="0dp"
                    android:layout_weight="40">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/fortyfive"
                        android:textColor="@android:color/black"
                        android:text="@string/h"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/help_frog_2"
                        android:layout_width="@dimen/onethirty"
                        android:layout_margin="@dimen/twenty"
                        android:layout_gravity="left"
                        android:layout_height="@dimen/fifty"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="@dimen/twenty">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/backwhite"
                                android:layout_marginLeft="@dimen/ten"
                                android:layout_marginStart="@dimen/ten"
                                android:layout_gravity="center_vertical"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="match_parent"
                                android:text="@string/back"
                                android:textColor="@android:color/white"
                                android:layout_marginLeft="@dimen/ten"
                                android:layout_marginStart="@dimen/ten"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textSize="@dimen/twenty"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/animals_first"
                        android:layout_width="@dimen/onethirty"
                        android:layout_margin="@dimen/twenty"
                        android:layout_gravity="right"
                        android:layout_height="@dimen/fifty"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="@dimen/twenty">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/next"
                                android:gravity="center"
                                android:textColor="@android:color/white"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/thirtyfive"
                                android:textStyle="bold"
                                android:textSize="@dimen/twenty"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/forwardwhite"
                                android:layout_marginStart="-35sp"
                                android:layout_gravity="center_vertical"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>