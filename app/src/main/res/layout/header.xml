<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:layout_height="?attr/actionBarSize">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/toback"
            android:layout_width="@dimen/thirty"
            android:layout_height="@dimen/thirty"
            android:src="@drawable/home"
            android:layout_gravity="center"
            android:layout_margin="@dimen/fifteen"/>

        <TextView
            android:id="@+id/book_name_header"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/forty"
            android:textSize="@dimen/twenty"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="@string/unbox_spacing"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_marginLeft="-40sp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/volumenote"
                android:layout_width="@dimen/thirty"
                android:layout_height="@dimen/thirty"
                android:layout_gravity="center"
                android:src="@drawable/volumeup"
                android:contentDescription="@string/soundon"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>

<!--        <ImageView-->
<!--            android:id="@+id/profile_id"-->
<!--            android:layout_width="@dimen/forty"-->
<!--            android:layout_height="@dimen/forty"-->
<!--            android:src="@drawable/profile"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_marginLeft="-50sp"-->
<!--            android:layout_marginStart="-50sp"/>-->

    </LinearLayout>

</LinearLayout>