<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.seniorkg.seniornumeracy.SeniorNumeracyActivity3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/header" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twenty"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/_7"
                        android:layout_width="@dimen/thirtyfive"
                        android:layout_height="@dimen/thirtyfive"
                        android:background="@drawable/blue_gradient"
                        android:text="@string/_7"
                        android:layout_margin="@dimen/fifteen"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/_4"
                        android:layout_width="@dimen/thirtyfive"
                        android:layout_height="@dimen/thirtyfive"
                        android:background="@drawable/blue_gradient"
                        android:text="@string/_4"
                        android:gravity="center"
                        android:layout_margin="@dimen/fifteen"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/_6"
                        android:layout_width="@dimen/thirtyfive"
                        android:layout_height="@dimen/thirtyfive"
                        android:background="@drawable/blue_gradient"
                        android:text="@string/_6"
                        android:gravity="center"
                        android:layout_margin="@dimen/fifteen"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/_13"
                        android:layout_width="@dimen/thirtyfive"
                        android:layout_height="@dimen/thirtyfive"
                        android:background="@drawable/blue_gradient"
                        android:text="@string/_13"
                        android:gravity="center"
                        android:layout_margin="@dimen/fifteen"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/bannerun3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/threehundred"
                android:layout_gravity="center"
                android:layout_margin="@dimen/fifteen" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/cakeun3"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/hundred" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/thirtyfive"
                        android:layout_height="@dimen/thirtyfive"
                        app:cardCornerRadius="@dimen/twentyfive"
                        android:layout_margin="@dimen/ten"
                        app:cardBackgroundColor="@color/yellow_jl">

                        <TextView
                            android:id="@+id/drop_6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/birthdaycapun3"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/hundred" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/thirtyfive"
                        android:layout_height="@dimen/thirtyfive"
                        app:cardCornerRadius="@dimen/twentyfive"
                        android:layout_margin="@dimen/ten"
                        app:cardBackgroundColor="@color/yellow_jl">

                        <TextView
                            android:id="@+id/drop_7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/lollipopun3"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/hundred" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/thirtyfive"
                        android:layout_height="@dimen/thirtyfive"
                        app:cardCornerRadius="@dimen/twentyfive"
                        android:layout_margin="@dimen/ten"
                        app:cardBackgroundColor="@color/yellow_jl">

                        <TextView
                            android:id="@+id/drop_13"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/giftun3"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/hundred" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/thirtyfive"
                        android:layout_height="@dimen/thirtyfive"
                        app:cardCornerRadius="@dimen/twentyfive"
                        android:layout_margin="@dimen/ten"
                        app:cardBackgroundColor="@color/yellow_jl">

                        <TextView
                            android:id="@+id/drop_4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/back"
                            android:layout_width="@dimen/onethirty"
                            android:layout_margin="@dimen/twenty"
                            android:layout_gravity="left"
                            android:layout_height="@dimen/fifty"
                            app:cardBackgroundColor="@color/colorAccent"
                            app:cardCornerRadius="@dimen/twenty">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/backwhite"
                                    android:layout_marginLeft="@dimen/ten"
                                    android:layout_marginStart="@dimen/ten"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:gravity="center"
                                    android:layout_height="match_parent"
                                    android:text="@string/back"
                                    android:textColor="@android:color/white"
                                    android:layout_marginLeft="@dimen/ten"
                                    android:layout_marginStart="@dimen/ten"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/twenty"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/next"
                            android:layout_width="@dimen/onethirty"
                            android:layout_margin="@dimen/twenty"
                            android:layout_gravity="right"
                            android:layout_height="@dimen/fifty"
                            app:cardBackgroundColor="@color/colorAccent"
                            app:cardCornerRadius="@dimen/twenty">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/next"
                                    android:gravity="center"
                                    android:textColor="@android:color/white"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/thirtyfive"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/twenty"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/forwardwhite"
                                    android:layout_marginStart="-35sp"
                                    android:layout_gravity="center_vertical"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>