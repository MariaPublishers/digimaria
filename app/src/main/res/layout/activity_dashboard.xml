<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/app_header" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout android:orientation="horizontal"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent">

                    <LinearLayout
                        android:layout_margin="@dimen/fifteen"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:layout_width="0dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/kg_series"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/splash_img"
                            app:cardBackgroundColor="#ffb79c"
                            app:cardCornerRadius="@dimen/twenty">

                            <ImageView
                                android:layout_width="@dimen/thirty"
                                android:layout_height="@dimen/thirtyfive"
                                android:layout_margin="@dimen/twenty"
                                android:src="@drawable/ic_kg_series" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/kg_series"
                                android:textSize="@dimen/fifteen"
                                android:textStyle="bold"
                                android:layout_gravity="bottom"
                                android:layout_margin="@dimen/fifteen"
                                />

                            <ImageView
                                android:layout_width="@dimen/fifty"
                                android:layout_height="@dimen/fifty"
                                android:layout_gravity="right"
                                android:layout_margin="@dimen/twenty"
                                android:src="@drawable/bubble"
                                />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_margin="@dimen/fifteen"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_width="0dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/english"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/splash_img"
                            app:cardBackgroundColor="#ffd488"
                            app:cardCornerRadius="@dimen/twenty">

                            <ImageView
                                android:layout_width="@dimen/thirty"
                                android:layout_height="@dimen/thirtyfive"
                                android:layout_margin="@dimen/twenty"
                                android:src="@drawable/english" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/english"
                                android:textSize="@dimen/fifteen"
                                android:textStyle="bold"
                                android:layout_gravity="bottom"
                                android:layout_margin="@dimen/fifteen"
                                />

                            <ImageView
                                android:layout_width="@dimen/fifty"
                                android:layout_height="@dimen/fifty"
                                android:layout_gravity="right"
                                android:layout_margin="@dimen/twenty"
                                android:src="@drawable/bubble"
                                />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout android:orientation="horizontal"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent">

                    <LinearLayout
                        android:layout_margin="@dimen/fifteen"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_width="0dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/science"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/splash_img"
                            app:cardBackgroundColor="#ffa678"
                            app:cardCornerRadius="@dimen/twenty">

                            <ImageView
                                android:layout_width="@dimen/thirty"
                                android:layout_height="@dimen/thirtyfive"
                                android:layout_margin="@dimen/twenty"
                                android:src="@drawable/science" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/science"
                                android:textSize="@dimen/fifteen"
                                android:textStyle="bold"
                                android:layout_gravity="bottom"
                                android:layout_margin="@dimen/fifteen"
                                />

                            <ImageView
                                android:layout_width="@dimen/fifty"
                                android:layout_height="@dimen/fifty"
                                android:layout_gravity="right"
                                android:layout_margin="@dimen/twenty"
                                android:src="@drawable/bubble"
                                />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_margin="@dimen/fifteen"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_width="0dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cs"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/splash_img"
                            app:cardBackgroundColor="#ffc278"
                            app:cardCornerRadius="@dimen/twenty">

                            <ImageView
                                android:layout_width="@dimen/thirty"
                                android:layout_height="@dimen/thirtyfive"
                                android:layout_margin="@dimen/twenty"
                                android:src="@drawable/computer" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/computer_science"
                                android:textSize="@dimen/fifteen"
                                android:textStyle="bold"
                                android:layout_gravity="bottom"
                                android:layout_margin="@dimen/fifteen"
                                />

                            <ImageView
                                android:layout_width="@dimen/fifty"
                                android:layout_height="@dimen/fifty"
                                android:layout_gravity="right"
                                android:layout_margin="@dimen/twenty"
                                android:src="@drawable/bubble"
                                />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout android:orientation="horizontal"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent">

                    <LinearLayout
                        android:layout_margin="@dimen/fifteen"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_width="0dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/gk"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/splash_img"
                            app:cardBackgroundColor="#ffdb78"
                            app:cardCornerRadius="@dimen/twenty">

                            <ImageView
                                android:layout_width="@dimen/thirty"
                                android:layout_height="@dimen/thirtyfive"
                                android:layout_margin="@dimen/twenty"
                                android:src="@drawable/generalknow" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/general_knowledge"
                                android:textSize="@dimen/fifteen"
                                android:textStyle="bold"
                                android:layout_gravity="bottom"
                                android:layout_margin="@dimen/fifteen"
                                />

                            <ImageView
                                android:layout_width="@dimen/fifty"
                                android:layout_height="@dimen/fifty"
                                android:layout_gravity="right"
                                android:layout_margin="@dimen/twenty"
                                android:src="@drawable/bubble"
                                />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_margin="@dimen/fifteen"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_width="0dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/valedu"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/splash_img"
                            app:cardBackgroundColor="#ff9478"
                            app:cardCornerRadius="@dimen/twenty">

                            <ImageView
                                android:layout_width="@dimen/thirty"
                                android:layout_height="@dimen/thirtyfive"
                                android:layout_margin="@dimen/twenty"
                                android:src="@drawable/value" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/valueeducation"
                                android:textSize="@dimen/fifteen"
                                android:textStyle="bold"
                                android:layout_gravity="bottom"
                                android:layout_margin="@dimen/fifteen"
                                />

                            <ImageView
                                android:layout_width="@dimen/fifty"
                                android:layout_height="@dimen/fifty"
                                android:layout_gravity="right"
                                android:layout_margin="@dimen/twenty"
                                android:src="@drawable/bubble"
                                />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout android:orientation="horizontal"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent">

                    <LinearLayout
                        android:layout_margin="@dimen/fifteen"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_width="0dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/regional"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/splash_img"
                            app:cardBackgroundColor="#ff9f9c"
                            app:cardCornerRadius="@dimen/twenty">

                            <ImageView
                                android:layout_width="@dimen/thirty"
                                android:layout_height="@dimen/thirtyfive"
                                android:layout_margin="@dimen/twenty"
                                android:src="@drawable/ic_regional_language" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/regionallanguages"
                                android:textSize="@dimen/fifteen"
                                android:textStyle="bold"
                                android:layout_gravity="bottom"
                                android:layout_margin="@dimen/fifteen"
                                />

                            <ImageView
                                android:layout_width="@dimen/fifty"
                                android:layout_height="@dimen/fifty"
                                android:layout_gravity="right"
                                android:layout_margin="@dimen/twenty"
                                android:src="@drawable/bubble"
                                />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_margin="@dimen/fifteen"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_width="0dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/social"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/splash_img"

                            app:cardBackgroundColor="#fff89c"
                            app:cardCornerRadius="@dimen/twenty">

                            <ImageView
                                android:layout_width="@dimen/thirty"
                                android:layout_height="@dimen/thirtyfive"
                                android:layout_margin="@dimen/twenty"
                                android:src="@drawable/others" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/others"
                                android:textSize="@dimen/fifteen"
                                android:textStyle="bold"
                                android:layout_gravity="bottom"
                                android:layout_margin="@dimen/fifteen"
                                />

                            <ImageView
                                android:layout_width="@dimen/fifty"
                                android:layout_height="@dimen/fifty"
                                android:layout_gravity="right"
                                android:layout_margin="@dimen/twenty"
                                android:src="@drawable/bubble"
                                />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fifteen"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/sixteen"
                    android:text="@string/unbox_spacing" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview"
                        android:scrollbars="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/fifteen"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/sixteen"
                        android:text="@string/our_books" />

                    <TextView
                        android:id="@+id/viewAll_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/fifteen"
                        android:textColor="@android:color/black"
                        android:text="@string/view_all" />

                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/publication_rv"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:padding="5dp"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:elevation="8sp"
        app:elevation="8sp"
        >
        <LinearLayout
            android:background="#f4f6f8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:paddingVertical="20dp"
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp">
                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/icon_profile"/>
                </FrameLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="10dp">
                    <TextView
                        android:id="@+id/studentname"
                        android:textStyle="bold"
                        android:paddingBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Student Name"
                        android:textSize="17dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/class_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Class 1"
                        android:textSize="15dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/mobile_no"
                        android:gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+91 9685743214"
                        android:textSize="15dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/black"/>

                </LinearLayout>


            </LinearLayout>



            <ScrollView
                android:scrollbars="none"
                android:overScrollMode="never"
                android:paddingHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="8dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="5dp"
                        app:cardMaxElevation="0dp"
                        app:cardBackgroundColor="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <LinearLayout
                            android:background="?selectableItemBackgroundBorderless"
                            android:paddingHorizontal="10dp"
                            android:orientation="horizontal"
                            android:onClick="home"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="15dp"
                                android:src="@drawable/home"/>
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_width="0dp"
                                android:textSize="16dp"
                                android:textColor="@color/black"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:text="Home"/>
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/icon_arrowright"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="8dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="5dp"
                        app:cardMaxElevation="0dp"
                        app:cardBackgroundColor="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <LinearLayout
                            android:background="?selectableItemBackgroundBorderless"
                            android:paddingHorizontal="10dp"
                            android:orientation="horizontal"
                            android:onClick="profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="15dp"
                                android:src="@drawable/icon_mysubscribers"/>
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_width="0dp"
                                android:textSize="16dp"
                                android:textColor="@color/black"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:text="My Profile"/>
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/icon_arrowright"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>



                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="8dp"
                        app:cardCornerRadius="5dp"
                        app:cardMaxElevation="0dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <LinearLayout
                            android:background="?selectableItemBackgroundBorderless"
                            android:onClick="logout"
                            android:paddingHorizontal="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="15dp"
                                android:src="@drawable/icon_logout"/>
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_width="0dp"
                                android:textSize="16dp"
                                android:textColor="@color/black"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:text="Log Out"/>
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/icon_arrowright"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_marginVertical="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="App Version 1.0"
                        android:textSize="14dp"
                        android:textColor="@color/black"/>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>


    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>