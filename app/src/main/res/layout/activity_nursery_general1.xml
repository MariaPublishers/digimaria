<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".activity.nursery.nurserygeneralawarness.NurseryGeneralActivity1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/header" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/babycrawling"
                    android:layout_width="@dimen/hundred"
                    android:layout_height="@dimen/hundred"
                    android:layout_margin="@dimen/ten"
                    android:scaleX="-1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/s1"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/eggs"
                            android:layout_width="@dimen/seventyfive"
                            android:layout_height="@dimen/seventyfive"
                            android:layout_margin="@dimen/ten"
                            android:layout_gravity="center" />

                        <ImageView
                            android:id="@+id/si1"
                            android:layout_width="@dimen/twentyfive"
                            android:layout_height="@dimen/twentyfive"
                            android:layout_gravity="center"
                            android:src="@drawable/circle" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/n1"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/choco"
                            android:layout_width="@dimen/seventyfive"
                            android:layout_height="@dimen/seventyfive"
                            android:layout_margin="@dimen/ten"
                            android:layout_gravity="center" />

                        <ImageView
                            android:id="@+id/ni1"
                            android:layout_width="@dimen/twentyfive"
                            android:layout_height="@dimen/twentyfive"
                            android:layout_gravity="center"
                            android:src="@drawable/circle" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/s2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/nuts"
                            android:layout_width="@dimen/seventyfive"
                            android:layout_height="@dimen/seventyfive"
                            android:layout_margin="@dimen/ten" />

                        <ImageView
                            android:id="@+id/si2"
                            android:layout_width="@dimen/twentyfive"
                            android:layout_height="@dimen/twentyfive"
                            android:layout_gravity="center"
                            android:src="@drawable/circle" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/n2"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/samosa"
                            android:layout_width="@dimen/seventyfive"
                            android:layout_height="@dimen/seventyfive"
                            android:layout_margin="@dimen/ten"
                            android:layout_gravity="center" />

                        <ImageView
                            android:id="@+id/ni2"
                            android:layout_width="@dimen/twentyfive"
                            android:layout_height="@dimen/twentyfive"
                            android:layout_gravity="center"
                            android:src="@drawable/circle" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/n3"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/chips"
                            android:layout_width="@dimen/seventyfive"
                            android:layout_height="@dimen/seventyfive"
                            android:layout_margin="@dimen/ten"
                            android:layout_gravity="center" />

                        <ImageView
                            android:id="@+id/ni3"
                            android:layout_width="@dimen/twentyfive"
                            android:layout_height="@dimen/twentyfive"
                            android:layout_gravity="center"
                            android:src="@drawable/circle" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/n4"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/pizza"
                            android:layout_width="@dimen/seventyfive"
                            android:layout_height="@dimen/seventyfive"
                            android:layout_margin="@dimen/ten"
                            android:layout_gravity="center" />

                        <ImageView
                            android:id="@+id/ni4"
                            android:layout_width="@dimen/twentyfive"
                            android:layout_height="@dimen/twentyfive"
                            android:layout_gravity="center"
                            android:src="@drawable/circle" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/s3"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/fish"
                            android:layout_width="@dimen/seventyfive"
                            android:layout_height="@dimen/seventyfive"
                            android:layout_margin="@dimen/ten"
                            android:layout_gravity="center" />

                        <ImageView
                            android:id="@+id/si3"
                            android:layout_width="@dimen/twentyfive"
                            android:layout_height="@dimen/twentyfive"
                            android:layout_gravity="center"
                            android:src="@drawable/circle" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/s4"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/fruits"
                            android:layout_width="@dimen/seventyfive"
                            android:layout_height="@dimen/seventyfive"
                            android:layout_margin="@dimen/ten" />

                        <ImageView
                            android:id="@+id/si4"
                            android:layout_width="@dimen/twentyfive"
                            android:layout_height="@dimen/twentyfive"
                            android:layout_gravity="center"
                            android:src="@drawable/circle" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/s5"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/milk"
                            android:layout_width="@dimen/seventyfive"
                            android:layout_height="@dimen/seventyfive"
                            android:layout_margin="@dimen/ten"
                            android:layout_gravity="center" />

                        <ImageView
                            android:id="@+id/si5"
                            android:layout_width="@dimen/twentyfive"
                            android:layout_height="@dimen/twentyfive"
                            android:layout_gravity="center"
                            android:src="@drawable/circle" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/n5"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/icecream"
                            android:layout_width="@dimen/seventyfive"
                            android:layout_height="@dimen/seventyfive"
                            android:layout_margin="@dimen/ten"
                            android:layout_gravity="center" />

                        <ImageView
                            android:id="@+id/ni5"
                            android:layout_width="@dimen/twentyfive"
                            android:layout_height="@dimen/twentyfive"
                            android:layout_gravity="center"
                            android:src="@drawable/circle" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/n6"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/cake"
                            android:layout_width="@dimen/seventyfive"
                            android:layout_height="@dimen/seventyfive"
                            android:layout_gravity="center" />

                        <ImageView
                            android:id="@+id/ni6"
                            android:layout_width="@dimen/twentyfive"
                            android:layout_height="@dimen/twentyfive"
                            android:layout_gravity="center"
                            android:src="@drawable/circle" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/s6"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/vegtables"
                            android:layout_width="@dimen/seventyfive"
                            android:layout_height="@dimen/seventyfive"
                            android:layout_gravity="center" />

                        <ImageView
                            android:id="@+id/si6"
                            android:layout_width="@dimen/twentyfive"
                            android:layout_height="@dimen/twentyfive"
                            android:layout_gravity="center"
                            android:src="@drawable/circle" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/superboy"
                    android:layout_width="@dimen/hundred"
                    android:layout_height="@dimen/hundred"
                    android:layout_gravity="right" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/heathy_food"
                    android:layout_width="@dimen/onethirty"
                    android:layout_margin="@dimen/twenty"
                    android:layout_gravity="right"
                    android:layout_height="@dimen/fifty"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="@dimen/twenty">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/next"
                            android:textColor="@android:color/white"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="@dimen/twenty"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/forwardwhite"
                            android:layout_marginRight="@dimen/five"
                            android:layout_marginEnd="@dimen/five"
                            android:layout_gravity="center_vertical"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>