<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".activity.nursery.nurseryliteracy.BookActivities">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/header" />

            <LinearLayout
                android:layout_marginRight="@dimen/twenty"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginTop="@dimen/twenty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <androidx.cardview.widget.CardView
                    android:id="@+id/elephant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/twenty" >

                    <ImageView
                        android:id="@+id/ele_img"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:layout_margin="@dimen/ten" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/r_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/twenty"
                    android:layout_weight="1"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:textStyle="bold"
                        android:textSize="@dimen/fortyfive"
                        android:textColor="@android:color/black"
                        android:text="@string/r_cap"
                        android:layout_margin="@dimen/ten"
                        android:gravity="center"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="@dimen/twenty"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginTop="@dimen/ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <androidx.cardview.widget.CardView
                    android:id="@+id/bear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/twenty"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/bear_img"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:layout_margin="@dimen/ten" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/e_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/twenty"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:textStyle="bold"
                        android:textSize="@dimen/fortyfive"
                        android:textColor="@android:color/black"
                        android:text="@string/e_cap"
                        android:layout_margin="@dimen/ten"
                        android:gravity="center"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:layout_marginTop="@dimen/ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <androidx.cardview.widget.CardView
                    android:id="@+id/rabbit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/twenty"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/rab_img"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:layout_margin="@dimen/ten" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/z_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/twenty"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:textStyle="bold"
                        android:textSize="@dimen/fortyfive"
                        android:textColor="@android:color/black"
                        android:text="@string/z_cap"
                        android:layout_margin="@dimen/ten"
                        android:gravity="center"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="@dimen/twenty"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginTop="@dimen/ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <androidx.cardview.widget.CardView
                    android:id="@+id/yak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/twenty"
                    android:layout_weight="40">

                    <ImageView
                        android:id="@+id/ox_img"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:layout_margin="@dimen/ten" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="10" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/b_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:cardCornerRadius="@dimen/twenty"
                    android:layout_weight="40">

                    <TextView
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:textStyle="bold"
                        android:textSize="@dimen/fortyfive"
                        android:textColor="@android:color/black"
                        android:text="@string/b_cap"
                        android:layout_margin="@dimen/ten"
                        android:gravity="center"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="@dimen/twenty"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginTop="@dimen/ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <androidx.cardview.widget.CardView
                    android:id="@+id/zebra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/twenty"
                    android:layout_weight="40">

                    <ImageView
                        android:id="@+id/zebra_img"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:layout_margin="@dimen/ten" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="10" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/y_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:cardCornerRadius="@dimen/twenty"
                    android:layout_weight="40">

                    <TextView
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:textStyle="bold"
                        android:textSize="@dimen/fortyfive"
                        android:textColor="@android:color/black"
                        android:text="@string/y_cap"
                        android:layout_margin="@dimen/ten"
                        android:gravity="center"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/small_caps_2"
                    android:layout_width="@dimen/onethirty"
                    android:layout_margin="@dimen/twenty"
                    android:layout_height="@dimen/fifty"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="@dimen/twenty">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/backwhite"
                            android:layout_marginLeft="@dimen/ten"
                            android:layout_marginStart="@dimen/ten"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:text="@string/back"
                            android:textColor="@android:color/white"
                            android:layout_marginLeft="@dimen/ten"
                            android:layout_marginStart="@dimen/ten"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="@dimen/twenty"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>