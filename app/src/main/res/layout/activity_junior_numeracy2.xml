<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.juniorkg.juniornumeracy.JuniorNumeracyActivity2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/header" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twenty"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/matchfive"
                    android:layout_marginTop="@dimen/twenty"
                    android:layout_marginLeft="@dimen/fifty"
                    android:layout_marginRight="@dimen/fifty"
                    app:cardElevation="0sp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="@dimen/thirty">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="@dimen/five"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fifteen"
                        android:text="@string/small" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/ten"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/ninty"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/ninty"
                            android:layout_height="@dimen/ninty"
                            android:src="@drawable/smallonionjn2" />

                        <ImageView
                            android:id="@+id/correct1"
                            android:layout_width="@dimen/twenty"
                            android:layout_height="@dimen/twenty"
                            android:layout_marginTop="@dimen/ten"
                            android:layout_gravity="center"
                            android:src="@drawable/circle" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/onefifty"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/onethirty"
                            android:layout_height="@dimen/onefifty"
                            android:layout_gravity="center"
                            android:src="@drawable/bigonionjn2" />

                        <ImageView
                            android:id="@+id/wrong1"
                            android:layout_width="@dimen/twenty"
                            android:layout_height="@dimen/twenty"
                            android:layout_marginTop="@dimen/ten"
                            android:layout_gravity="center"
                            android:src="@drawable/circle" />

                    </LinearLayout>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/matchfive"
                    android:layout_marginTop="@dimen/twenty"
                    android:layout_marginLeft="@dimen/fifty"
                    android:layout_marginRight="@dimen/fifty"
                    app:cardElevation="0sp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="@dimen/thirty">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="@dimen/five"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fifteen"
                        android:text="@string/big" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/fifteen"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/ninty"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/ninty"
                            android:layout_height="@dimen/ninty"
                            android:src="@drawable/smalleggjn2" />

                        <ImageView
                            android:id="@+id/wrong2"
                            android:layout_width="@dimen/twenty"
                            android:layout_height="@dimen/twenty"
                            android:layout_marginTop="@dimen/ten"
                            android:layout_gravity="center"
                            android:src="@drawable/circle" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/onefifty"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/hundred"
                            android:layout_height="@dimen/onetwenty"
                            android:layout_gravity="center"
                            android:src="@drawable/smalleggjn2" />

                        <ImageView
                            android:id="@+id/correct2"
                            android:layout_width="@dimen/twenty"
                            android:layout_height="@dimen/twenty"
                            android:layout_marginTop="@dimen/ten"
                            android:layout_gravity="center"
                            android:src="@drawable/circle" />

                    </LinearLayout>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/matchfive"
                    android:layout_marginTop="@dimen/twenty"
                    android:layout_marginLeft="@dimen/fifty"
                    android:layout_marginRight="@dimen/fifty"
                    app:cardElevation="0sp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="@dimen/thirty">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="@dimen/five"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fifteen"

                        android:text="@string/tall" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/fifteen"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/ninty"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/ninty"
                            android:layout_height="@dimen/ninty"
                            android:src="@drawable/smallgiraffejn2" />

                        <ImageView
                            android:id="@+id/wrong3"
                            android:layout_width="@dimen/twenty"
                            android:layout_height="@dimen/twenty"
                            android:layout_marginTop="@dimen/ten"
                            android:layout_gravity="center"
                            android:src="@drawable/circle" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/onefifty"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/onefifty"
                            android:layout_height="@dimen/onefifty"
                            android:src="@drawable/biggiraffejn2" />

                        <ImageView
                            android:id="@+id/correct3"
                            android:layout_width="@dimen/twenty"
                            android:layout_height="@dimen/twenty"
                            android:layout_marginTop="@dimen/ten"
                            android:layout_gravity="center"
                            android:src="@drawable/circle" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/back"
                            android:layout_width="@dimen/onethirty"
                            android:layout_margin="@dimen/twenty"
                            android:layout_gravity="left"
                            android:layout_height="@dimen/fifty"
                            app:cardBackgroundColor="@color/colorAccent"
                            app:cardCornerRadius="@dimen/twenty">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/backwhite"
                                    android:layout_marginLeft="@dimen/ten"
                                    android:layout_marginStart="@dimen/ten"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:gravity="center"
                                    android:layout_height="match_parent"
                                    android:text="@string/back"
                                    android:textColor="@android:color/white"
                                    android:layout_marginLeft="@dimen/ten"
                                    android:layout_marginStart="@dimen/ten"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/twenty"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/next"
                            android:layout_width="@dimen/onethirty"
                            android:layout_margin="@dimen/twenty"
                            android:layout_gravity="right"
                            android:layout_height="@dimen/fifty"
                            app:cardBackgroundColor="@color/colorAccent"
                            app:cardCornerRadius="@dimen/twenty">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/next"
                                    android:gravity="center"
                                    android:textColor="@android:color/white"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/thirtyfive"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/twenty"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/forwardwhite"
                                    android:layout_marginStart="-35sp"
                                    android:layout_gravity="center_vertical"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>