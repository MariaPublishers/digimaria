<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.juniorkg.juniorgeneralawarness.JuniorGeneralActivity2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/header" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/eggs"
                            android:layout_width="@dimen/seventyfive"
                            android:layout_height="@dimen/seventyfive"
                            android:layout_margin="@dimen/ten"
                            android:layout_gravity="center" />

                        <ImageView
                            android:id="@+id/correct1"
                            android:layout_width="@dimen/twentyfive"
                            android:layout_height="@dimen/twentyfive"
                            android:layout_gravity="center"
                            android:src="@drawable/circle" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/seventyfive"
                            android:layout_height="@dimen/seventyfive"
                            android:layout_margin="@dimen/ten"
                            android:layout_gravity="center"
                            android:src="@drawable/pizzajg2"/>

                        <ImageView
                            android:id="@+id/wrong1"
                            android:layout_width="@dimen/twentyfive"
                            android:layout_height="@dimen/twentyfive"
                            android:layout_gravity="center"
                            android:src="@drawable/circle" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/nuts"
                            android:layout_width="@dimen/seventyfive"
                            android:layout_height="@dimen/seventyfive"
                            android:layout_margin="@dimen/ten"
                            android:layout_gravity="center" />

                        <ImageView
                            android:id="@+id/correct2"
                            android:layout_width="@dimen/twentyfive"
                            android:layout_height="@dimen/twentyfive"
                            android:layout_gravity="center"
                            android:src="@drawable/circle" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/s2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/seventyfive"
                            android:layout_height="@dimen/seventyfive"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/ten"
                            android:src="@drawable/samosajg2"/>

                        <ImageView
                            android:id="@+id/wrong2"
                            android:layout_width="@dimen/twentyfive"
                            android:layout_height="@dimen/twentyfive"
                            android:layout_gravity="center"
                            android:src="@drawable/circle" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/n2"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/seventyfive"
                            android:layout_height="@dimen/seventyfive"
                            android:layout_margin="@dimen/ten"
                            android:layout_gravity="center"
                            android:src="@drawable/fruitsjg2"/>

                        <ImageView
                            android:id="@+id/correct3"
                            android:layout_width="@dimen/twentyfive"
                            android:layout_height="@dimen/twentyfive"
                            android:layout_gravity="center"
                            android:src="@drawable/circle" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/n3"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/sixtyfive"
                                android:layout_marginTop="@dimen/ten"
                                android:layout_marginBottom="@dimen/ten"
                                android:layout_marginLeft="@dimen/ten"
                                android:layout_gravity="center"
                                android:src="@drawable/drinksjg23"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/sixtyfive"
                                android:layout_marginTop="@dimen/ten"
                                android:layout_marginBottom="@dimen/ten"
                                android:layout_marginRight="@dimen/ten"
                                android:layout_gravity="center"
                                android:src="@drawable/drinksjg2"/>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/wrong3"
                            android:layout_width="@dimen/twentyfive"
                            android:layout_height="@dimen/twentyfive"
                            android:layout_gravity="center"
                            android:src="@drawable/circle" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/n4"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/seventyfive"
                            android:layout_height="@dimen/seventyfive"
                            android:layout_margin="@dimen/ten"
                            android:layout_gravity="center"
                            android:src="@drawable/meatjg2"/>

                        <ImageView
                            android:id="@+id/correct4"
                            android:layout_width="@dimen/twentyfive"
                            android:layout_height="@dimen/twentyfive"
                            android:layout_gravity="center"
                            android:src="@drawable/circle" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/seventyfive"
                            android:layout_height="@dimen/seventyfive"
                            android:layout_margin="@dimen/ten"
                            android:layout_gravity="center"
                            android:src="@drawable/chickenjg2"/>

                        <ImageView
                            android:id="@+id/correct5"
                            android:layout_width="@dimen/twentyfive"
                            android:layout_height="@dimen/twentyfive"
                            android:layout_gravity="center"
                            android:src="@drawable/circle" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/s3"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/seventyfive"
                            android:layout_height="@dimen/seventyfive"
