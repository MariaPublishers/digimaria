<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include layout="@layout/header" />

        <ImageView
            android:id="@+id/landing_cover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/oneseventy"
            android:contentDescription="@string/cover_picture"
            android:scaleType="centerCrop"
            android:src="@drawable/seniorbg" />

        <androidx.cardview.widget.CardView
            android:id="@+id/Alphabet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginTop="@dimen/twentyfive"
            android:layout_marginRight="@dimen/twenty"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="@dimen/twenty">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Alphabet"
                android:textColor="@color/white"
                android:textSize="@dimen/twenty"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Numeracy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginTop="@dimen/twenty"
            android:layout_marginRight="@dimen/twenty"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="@dimen/twenty">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Numeracy"
                android:textColor="@color/white"
                android:textSize="@dimen/twenty"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/BodyBody"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginTop="@dimen/twenty"
            android:layout_marginRight="@dimen/twenty"
            android:layout_marginBottom="@dimen/twenty"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="@dimen/twenty">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Parts of the Body"
                android:textColor="@color/white"
                android:textSize="@dimen/twenty"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Vowels"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginRight="@dimen/twenty"
            android:layout_marginBottom="@dimen/twenty"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="@dimen/twenty">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Vowels"
                android:textColor="@color/white"
                android:textSize="@dimen/twenty"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Shapes"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginRight="@dimen/twenty"
            android:layout_marginBottom="@dimen/twenty"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="@dimen/twenty">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Shapes"
                android:textColor="@color/white"
                android:textSize="@dimen/twenty"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>