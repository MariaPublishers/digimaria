<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.seniorkg.seniornumeracy.SeniorNumeracyWorksheet1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/header" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="match_parent"
                    android:layout_height="800sp">

                </RelativeLayout>

                <RadioButton
                    android:id="@+id/twol1"
                    android:layout_width="@dimen/thirty"
                    android:layout_height="@dimen/thirty"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/splash_img"
                    android:layout_marginTop="@dimen/fifty" />

                <RadioButton
                    android:id="@+id/one"
                    android:layout_width="@dimen/thirty"
                    android:layout_height="@dimen/thirty"
                    android:layout_marginLeft="@dimen/splash_img"
                    android:layout_marginTop="105sp" />

                <RadioButton
                    android:id="@+id/threel1"
                    android:layout_width="@dimen/thirty"
                    android:layout_height="@dimen/thirty"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/splash_img"
                    android:layout_marginTop="@dimen/onesixty" />

                <RadioButton
                    android:id="@+id/onel1"
                    android:layout_width="@dimen/thirty"
                    android:layout_height="@dimen/thirty"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/splash_img"
                    android:layout_marginTop="@dimen/twoseventy" />

                <RadioButton
                    android:id="@+id/two"
                    android:layout_width="@dimen/thirty"
                    android:layout_height="@dimen/thirty"
                    android:layout_marginLeft="@dimen/splash_img"
                    android:layout_marginTop="330sp" />

                <RadioButton
                    android:id="@+id/twol2"
                    android:layout_width="@dimen/thirty"
                    android:layout_height="@dimen/thirty"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/splash_img"
                    android:layout_marginTop="@dimen/threeeighty" />

                <RadioButton
                    android:id="@+id/three"
                    android:layout_width="@dimen/thirty"
                    android:layout_height="@dimen/thirty"
                    android:layout_marginLeft="@dimen/splash_img"
                    android:layout_marginTop="550sp" />

                <RadioButton
                    android:id="@+id/onel2"
                    android:layout_width="@dimen/thirty"
                    android:layout_height="@dimen/thirty"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/splash_img"
                    android:layout_marginTop="@dimen/fourninty" />

                <RadioButton
                    android:id="@+id/threel2"
                    android:layout_width="@dimen/thirty"
                    android:layout_height="@dimen/thirty"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/splash_img"
                    android:layout_marginTop="@dimen/sixhundred" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/rabittail"
                    android:layout_marginEnd="@dimen/fifteen"
                    android:layout_marginTop="@dimen/twenty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/twenty"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:text="@string/_5_10_15_20_25"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_margin="@dimen/ten"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/rabit"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/fifteen"
                    android:layout_marginTop="@dimen/seventyfive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/twenty">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:layout_margin="@dimen/ten"
                        android:src="@drawable/pencil1un9" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/dogtail"
                    android:layout_marginEnd="@dimen/fifteen"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/onethirty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/twenty"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:text="@string/_40_50_60_70_80"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_margin="@dimen/ten"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/pigtail"
                    android:layout_marginEnd="@dimen/fifteen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/twenty"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/twoforty"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:text="@string/_52_54_56_58_60"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_margin="@dimen/ten"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/pig"
                    android:layout_marginStart="@dimen/fifteen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/threehundred"
                    app:cardCornerRadius="@dimen/twenty">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:layout_margin="@dimen/ten"
                        android:src="@drawable/pencil2un9" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/elephanttail"
                    android:layout_marginTop="@dimen/threefifty"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="@dimen/fifteen"
                    android:layout_alignParentEnd="true"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:cardCornerRadius="@dimen/twenty">

                    <TextView
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:text="@string/_75_80_85_90_95"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_margin="@dimen/ten"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/dog"
                    android:layout_marginStart="@dimen/fifteen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="520sp"
                    app:cardCornerRadius="@dimen/twenty">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:layout_margin="@dimen/ten"
                        android:src="@drawable/pencil3un9" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/monkeytail"
                    android:layout_marginEnd="@dimen/fifteen"
                    android:layout_marginTop="@dimen/foursixty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    app:cardCornerRadius="@dimen/twenty">

                    <TextView
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:text="@string/_18_20_22_24_26"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_margin="@dimen/ten"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginEnd="@dimen/fifteen"
                    android:layout_marginTop="@dimen/fiveseventy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    app:cardCornerRadius="@dimen/twenty">

                    <TextView
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:text="@string/_20_30_40_50_60"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_margin="@dimen/ten"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sixeighty"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/back"
                                android:layout_width="@dimen/onethirty"
                                android:layout_margin="@dimen/twenty"
                                android:layout_gravity="left"
                                android:layout_height="@dimen/fifty"
                                app:cardBackgroundColor="@color/colorAccent"
                                app:cardCornerRadius="@dimen/twenty">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/backwhite"
                                        android:layout_marginLeft="@dimen/ten"
                                        android:layout_marginStart="@dimen/ten"
                                        android:layout_gravity="center_vertical"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:gravity="center"
                                        android:layout_height="match_parent"
                                        android:text="@string/back"
                                        android:textColor="@android:color/white"
                                        android:layout_marginLeft="@dimen/ten"
                                        android:layout_marginStart="@dimen/ten"
                                        android:layout_gravity="center"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/twenty"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/next"
                                android:layout_width="@dimen/onethirty"
                                android:layout_margin="@dimen/twenty"
                                android:layout_gravity="right"
                                android:layout_height="@dimen/fifty"
                                app:cardBackgroundColor="@color/colorAccent"
                                app:cardCornerRadius="@dimen/twenty">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="@string/next"
                                        android:gravity="center"
                                        android:textColor="@android:color/white"
                                        android:layout_gravity="center"
                                        android:layout_marginEnd="@dimen/thirtyfive"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/twenty"/>

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/forwardwhite"
                                        android:layout_marginStart="-35sp"
                                        android:layout_gravity="center_vertical"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>