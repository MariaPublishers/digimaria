<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.seniorkg.seniorgeneralawarness.SeniorGeneralActivity4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/header" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sixeighty">

                </RelativeLayout>

                <RadioButton
                    android:id="@+id/one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/oneten"
                    android:layout_marginLeft="@dimen/oneten" />

                <RadioButton
                    android:id="@+id/two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="330sp"
                    android:layout_marginLeft="@dimen/oneten" />

                <RadioButton
                    android:id="@+id/three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fivethirty"
                    android:layout_marginLeft="@dimen/oneten" />

                <RadioButton
                    android:id="@+id/three1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/fifty"
                    android:layout_marginRight="@dimen/oneten" />

                <RadioButton
                    android:id="@+id/three2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/onesixty"
                    android:layout_marginRight="@dimen/oneten" />

                <RadioButton
                    android:id="@+id/two1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/twoseventy"
                    android:layout_marginRight="@dimen/oneten" />

                <RadioButton
                    android:id="@+id/one1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/threeeighty"
                    android:layout_marginRight="@dimen/oneten" />

                <RadioButton
                    android:id="@+id/one2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/fourninty"
                    android:layout_marginRight="@dimen/oneten" />

                <RadioButton
                    android:id="@+id/two2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/sixhundred"
                    android:layout_marginRight="@dimen/oneten" />

                <androidx.cardview.widget.CardView
                    android:layout_marginStart="@dimen/fifteen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/eighty"
                    app:cardCornerRadius="@dimen/twenty">

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:textColor="@color/black"
                        android:text="@string/winter"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/cloudug4"
                        android:layout_margin="@dimen/ten" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginStart="@dimen/fifteen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/threehundred"
                    app:cardCornerRadius="@dimen/twenty">

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:textColor="@color/black"
                        android:text="@string/summer"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/cloudug4"
                        android:layout_margin="@dimen/ten" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginStart="@dimen/fifteen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fivehundred"
                    app:cardCornerRadius="@dimen/twenty">

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:textColor="@color/black"
                        android:text="@string/rainy"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/cloudug4"
                        android:layout_margin="@dimen/ten" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginEnd="@dimen/fifteen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/twenty"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/twenty"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:src="@drawable/raincoatug4"
                        android:gravity="center"
                        android:layout_margin="@dimen/ten"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginEnd="@dimen/fifteen"
                    android:layout_marginTop="@dimen/onethirty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    app:cardCornerRadius="@dimen/twenty">

                    <ImageView
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:src="@drawable/umbrellaug4"
                        android:gravity="center"
                        android:layout_margin="@dimen/ten"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginEnd="@dimen/fifteen"
                    android:layout_marginTop="@dimen/twoforty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    app:cardCornerRadius="@dimen/twenty">

                    <ImageView
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:src="@drawable/juiceglassug4"
                        android:gravity="center"
                        android:layout_margin="@dimen/ten"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginEnd="@dimen/fifteen"
                    android:layout_marginTop="@dimen/threefifty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    app:cardCornerRadius="@dimen/twenty">

                    <ImageView
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:src="@drawable/sweaterug4"
                        android:gravity="center"
                        android:layout_margin="@dimen/ten"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginEnd="@dimen/fifteen"
                    android:layout_marginTop="@dimen/foursixty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    app:cardCornerRadius="@dimen/twenty">

                    <ImageView
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:src="@drawable/mittensug4"
                        android:gravity="center"
                        android:layout_margin="@dimen/ten"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginEnd="@dimen/fifteen"
                    android:layout_marginTop="@dimen/fiveseventy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    app:cardCornerRadius="@dimen/twenty">

                    <ImageView
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:src="@drawable/capul1"
                        android:gravity="center"
                        android:layout_margin="@dimen/ten"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sixeighty"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/back"
                                android:layout_width="@dimen/onethirty"
                                android:layout_margin="@dimen/twenty"
                                android:layout_gravity="left"
                                android:layout_height="@dimen/fifty"
                                app:cardBackgroundColor="@color/colorAccent"
                                app:cardCornerRadius="@dimen/twenty">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/backwhite"
                                        android:layout_marginLeft="@dimen/ten"
                                        android:layout_marginStart="@dimen/ten"
                                        android:layout_gravity="center_vertical"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:gravity="center"
                                        android:layout_height="match_parent"
                                        android:text="@string/back"
                                        android:textColor="@android:color/white"
                                        android:layout_marginLeft="@dimen/ten"
                                        android:layout_marginStart="@dimen/ten"
                                        android:layout_gravity="center"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/twenty"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/next"
                                android:layout_width="@dimen/onethirty"
                                android:layout_margin="@dimen/twenty"
                                android:layout_gravity="right"
                                android:layout_height="@dimen/fifty"
                                app:cardBackgroundColor="@color/colorAccent"
                                app:cardCornerRadius="@dimen/twenty">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="@string/next"
                                        android:gravity="center"
                                        android:textColor="@android:color/white"
                                        android:layout_gravity="center"
                                        android:layout_marginEnd="@dimen/thirtyfive"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/twenty"/>

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/forwardwhite"
                                        android:layout_marginStart="-35sp"
                                        android:layout_gravity="center_vertical"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>