<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400sp"
    android:layout_height="@dimen/twoseventy">

    <androidx.cardview.widget.CardView
        android:id="@+id/dyn_card"
        android:layout_width="@dimen/threehundred"
        android:layout_height="@dimen/twothirty"
        app:cardCornerRadius="@dimen/twenty"
        android:layout_margin="@dimen/twenty">

        <LinearLayout
            android:id="@+id/book_card"
            android:layout_width="match_parent"
            android:background="@drawable/round_corner"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bookimage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/onefourthree"
                android:scaleType="centerCrop"
                android:src="@drawable/book" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/fifteen"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bookname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bookname"
                android:textSize="@dimen/fifteen"
                android:textStyle="bold"
                android:layout_gravity="bottom" />

            <TextView
                android:id="@+id/language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/english_class_1"
                android:textSize="@dimen/fifteen"
                android:textStyle="bold"
                android:layout_gravity="bottom" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>