<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.juniorkg.juniorliteracy.JuniorLiteracyActivity10">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/header" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/sixtyfive"
                android:layout_gravity="center"
                android:layout_margin="@dimen/ten"
                app:cardCornerRadius="@dimen/twenty">

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/jnl9"
                        app:cardCornerRadius="@dimen/five">

                        <TextView
                            android:id="@+id/cook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_margin="@dimen/five"
                            android:gravity="center"
                            android:text="@string/cook" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/jnl9"
                        android:layout_marginStart="@dimen/five"
                        app:cardCornerRadius="@dimen/five">

                        <TextView
                            android:id="@+id/exercise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_margin="@dimen/five"
                            android:text="@string/exercise" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/jnl9"
                        android:layout_marginStart="@dimen/five"
                        app:cardCornerRadius="@dimen/five">

                        <TextView
                            android:id="@+id/brush"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_margin="@dimen/five"
                            android:text="@string/brush" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/jnl9"
                        android:layout_marginStart="@dimen/five"
                        app:cardCornerRadius="@dimen/five">

                        <TextView
                            android:id="@+id/play"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_margin="@dimen/five"
                            android:text="@string/play" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/jnl9"
                        android:layout_marginStart="@dimen/five"
                        app:cardCornerRadius="@dimen/five">

                        <TextView
                            android:id="@+id/read"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_margin="@dimen/five"
                            android:text="@string/read" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/jnl9"
                        android:layout_marginStart="@dimen/five"
                        app:cardCornerRadius="@dimen/five">

                        <TextView
                            android:id="@+id/climb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_margin="@dimen/five"
                            android:gravity="center"
                            android:text="@string/climb" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twenty"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/hundred"
                        android:layout_height="@dimen/hundred"
                        android:layout_gravity="center"
                        android:src="@drawable/girlreading" />

                    <LinearLayout
                        android:id="@+id/read_lay"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fifty"
                        android:layout_margin="@dimen/twenty"
                        android:gravity="center"
                        android:background="@drawable/input_border">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:id="@+id/read_txt" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/hundred"
                        android:layout_height="@dimen/hundred"
                        android:layout_gravity="center"
                        android:src="@drawable/girlplaying" />

                    <LinearLayout
                        android:id="@+id/play_lay"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fifty"
                        android:layout_margin="@dimen/twenty"
                        android:gravity="center"
                        android:background="@drawable/input_border">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:id="@+id/play_txt" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/hundred"
                        android:layout_height="@dimen/hundred"
                        android:layout_gravity="center"
                        android:src="@drawable/boyexercising" />

                    <LinearLayout
                        android:id="@+id/exercise_lay"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fifty"
                        android:layout_margin="@dimen/twenty"
                        android:gravity="center"
                        android:background="@drawable/input_border">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:id="@+id/exercise_txt" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twenty"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/hundred"
                        android:layout_height="@dimen/hundred"
                        android:layout_gravity="center"
                        android:src="@drawable/boybrushing" />

                    <LinearLayout
                        android:id="@+id/brush_lay"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fifty"
                        android:layout_margin="@dimen/twenty"
                        android:gravity="center"
                        android:background="@drawable/input_border">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:id="@+id/brush_txt" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/hundred"
                        android:layout_height="@dimen/hundred"
                        android:layout_gravity="center"
                        android:src="@drawable/girlcooking" />

                    <LinearLayout
                        android:id="@+id/cooking_lay"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fifty"
                        android:layout_margin="@dimen/twenty"
                        android:gravity="center"
                        android:background="@drawable/input_border">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:id="@+id/cook_txt" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/hundred"
                        android:layout_height="@dimen/hundred"
                        android:layout_gravity="center"
                        android:src="@drawable/boyclimbing" />

                    <LinearLayout
                        android:id="@+id/climb_lay"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fifty"
                        android:layout_margin="@dimen/twenty"
                        android:gravity="center"
                        android:background="@drawable/input_border">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:id="@+id/climb_txt" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/back"
                            android:layout_width="@dimen/onethirty"
                            android:layout_margin="@dimen/twenty"
                            android:layout_gravity="left"
                            android:layout_height="@dimen/fifty"
                            app:cardBackgroundColor="@color/colorAccent"
                            app:cardCornerRadius="@dimen/twenty">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/backwhite"
                                    android:layout_marginLeft="@dimen/ten"
                                    android:layout_marginStart="@dimen/ten"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:gravity="center"
                                    android:layout_height="match_parent"
                                    android:text="@string/back"
                                    android:textColor="@android:color/white"
                                    android:layout_marginLeft="@dimen/ten"
                                    android:layout_marginStart="@dimen/ten"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/twenty"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>