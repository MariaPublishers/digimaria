                <RadioButton
                    android:id="@+id/four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/splash_img"
                    android:layout_marginTop="@dimen/threeeighty" />

                <RadioButton
                    android:id="@+id/twol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
