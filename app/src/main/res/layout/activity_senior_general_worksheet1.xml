                    android:layout_marginTop="@dimen/sixhundred" />

                <RadioButton
                    android:id="@+id/fivel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/ninty"
                    android:layout_marginTop="@dimen/sixhundred" />

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/twenty"
                    android:layout_marginStart="@dimen/fifteen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="0sp"
                    app:cardBackgroundColor="@color/sgw1"
                    android:layout_alignParentStart="true"
                    app:cardCornerRadius="@dimen/twenty">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:layout_margin="@dimen/ten"
                        android:scaleType="centerCrop"
                        android:src="@drawable/wellun7" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_marginEnd="@dimen/fifteen"
                    android:layout_marginTop="@dimen/thirtyfive"
                    android:layout_width="@dimen/seventyfive"
                    android:layout_height="@dimen/sixty"
                    android:background="@drawable/cloudug4"
                    android:layout_alignParentEnd="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="@string/lake" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/fifteen"
                    android:layout_marginTop="@dimen/onethirty"
                    android:layout_width="wrap_content"
                    app:cardElevation="0sp"
                    app:cardBackgroundColor="@color/sgw1"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/twenty">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:layout_margin="@dimen/ten"
                        android:scaleType="centerCrop"
                        android:src="@drawable/rainun7" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_marginEnd="@dimen/fifteen"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/onefourthree"
                    android:layout_width="@dimen/seventyfive"
                    android:layout_height="@dimen/sixty"
                    android:background="@drawable/cloudug4"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="@string/tube_well" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_marginStart="@dimen/fifteen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twoforty"
                    app:cardElevation="0sp"
                    app:cardBackgroundColor="@color/sgw1"
                    app:cardCornerRadius="@dimen/twenty">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:layout_margin="@dimen/ten"
                        android:scaleType="centerCrop"
                        android:src="@drawable/tubewellun7" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_marginEnd="@dimen/fifteen"
                    android:layout_width="@dimen/seventyfive"
                    android:layout_height="@dimen/sixty"
                    android:background="@drawable/cloudug4"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/twofifty"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="@string/pond" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_marginStart="@dimen/fifteen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="0sp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/threefifty"
                    app:cardBackgroundColor="@color/sgw1"
                    app:cardCornerRadius="@dimen/twenty">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:layout_margin="@dimen/ten"
                        android:scaleType="centerCrop"
                        android:src="@drawable/lakeun7" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_marginEnd="@dimen/fifteen"
                    android:layout_marginTop="360sp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="@dimen/seventyfive"
                    android:layout_height="@dimen/sixty"
                    android:background="@drawable/cloudug4"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="@string/rainwater" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_marginStart="@dimen/fifteen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    app:cardElevation="0sp"
                    app:cardBackgroundColor="@color/sgw1"
                    android:layout_marginTop="@dimen/foursixty"
                    app:cardCornerRadius="@dimen/twenty">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:layout_margin="@dimen/ten"
                        android:scaleType="centerCrop"
                        android:src="@drawable/riverun7" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
