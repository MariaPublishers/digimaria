                    android:layout_marginLeft="@dimen/splash_img"
                    android:layout_marginTop="@dimen/fourninty" />

                <RadioButton
                    android:id="@+id/onel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
