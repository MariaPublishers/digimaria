                    android:layout_marginTop="470sp"
                    android:layout_width="@dimen/seventyfive"
                    android:layout_height="@dimen/sixty"
                    android:background="@drawable/cloudug4"
                    android:layout_alignParentEnd="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="@string/well" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_marginStart="@dimen/fifteen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/fiveseventy"
                    app:cardElevation="0sp"
                    app:cardBackgroundColor="@color/sgw1"
                    app:cardCornerRadius="@dimen/twenty">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:layout_margin="@dimen/ten"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pondun7" />

                </androidx.cardview.widget.CardView>

