<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.seniorkg.seniorgeneralawarness.SeniorGeneralActivity1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/header" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_margin="@dimen/twenty"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="@dimen/onethirty"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/seventyfive"
                        android:src="@drawable/soapug1" />

                    <ImageView
                        android:id="@+id/correct1"
                        android:layout_width="@dimen/twentyfive"
                        android:layout_height="@dimen/twentyfive"
                        android:layout_marginTop="@dimen/fifteen"
                        android:layout_gravity="center"
                        android:src="@drawable/circle" />

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="@dimen/twenty"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="@dimen/onethirty"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/seventyfive"
                        android:src="@drawable/dustbinug1" />

                    <ImageView
                        android:id="@+id/wrong1"
                        android:layout_width="@dimen/twentyfive"
                        android:layout_height="@dimen/twentyfive"
                        android:layout_marginTop="@dimen/fifteen"
                        android:layout_gravity="center"
                        android:src="@drawable/circle" />

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="@dimen/twenty"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="@dimen/onethirty"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/seventyfive"
                        android:src="@drawable/roseug1" />

                    <ImageView
                        android:id="@+id/correct2"
                        android:layout_width="@dimen/twentyfive"
                        android:layout_height="@dimen/twentyfive"
                        android:layout_marginTop="@dimen/fifteen"
                        android:layout_gravity="center"
                        android:src="@drawable/circle" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_margin="@dimen/twenty"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="@dimen/onethirty">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/noseug1" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_margin="@dimen/twenty"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="@dimen/onethirty"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/seventyfive"
                        android:scaleType="centerCrop"
                        android:src="@drawable/dryfishug1" />

                    <ImageView
                        android:id="@+id/wrong2"
                        android:layout_width="@dimen/twentyfive"
                        android:layout_height="@dimen/twentyfive"
                        android:layout_marginTop="@dimen/fifteen"
                        android:layout_gravity="center"
                        android:src="@drawable/circle" />

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="@dimen/twenty"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="@dimen/onethirty"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/seventyfive"
                        android:scaleType="centerCrop"
                        android:src="@drawable/rottenfruitug1" />

                    <ImageView
                        android:id="@+id/wrong3"
                        android:layout_width="@dimen/twentyfive"
                        android:layout_height="@dimen/twentyfive"
                        android:layout_marginTop="@dimen/fifteen"
                        android:layout_gravity="center"
                        android:src="@drawable/circle" />

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="@dimen/twenty"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="@dimen/onethirty"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/seventyfive"
                        android:scaleType="centerCrop"
                        android:src="@drawable/perfumebottleug1" />

                    <ImageView
                        android:id="@+id/correct3"
                        android:layout_width="@dimen/twentyfive"
                        android:layout_height="@dimen/twentyfive"
                        android:layout_marginTop="@dimen/fifteen"
                        android:layout_gravity="center"
                        android:src="@drawable/circle" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/next"
                            android:layout_width="@dimen/onethirty"
                            android:layout_margin="@dimen/twenty"
                            android:layout_gravity="right"
                            android:layout_height="@dimen/fifty"
                            app:cardBackgroundColor="@color/colorAccent"
                            app:cardCornerRadius="@dimen/twenty">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/next"
                                    android:gravity="center"
                                    android:textColor="@android:color/white"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/thirtyfive"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/twenty"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/forwardwhite"
                                    android:layout_marginStart="-35sp"
                                    android:layout_gravity="center_vertical"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>