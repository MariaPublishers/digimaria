<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".activity.nursery.nurserynumeracy.NurseryNumeracyActivity1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/header" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="match_parent"
                    android:layout_height="800sp">

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/twenty"
                    android:layout_marginStart="@dimen/fifteen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    app:cardCornerRadius="@dimen/twenty">

                    <ImageView
                        android:id="@+id/monkey"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:layout_margin="@dimen/ten" />

                </androidx.cardview.widget.CardView>

                <RadioButton
                    android:id="@+id/mr1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/splash_img"
                    android:layout_marginTop="@dimen/fifty" />

                <RadioButton
                    android:id="@+id/rt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    
                    android:layout_marginEnd="@dimen/splash_img"
                    android:layout_marginTop="@dimen/fifty" />

                <androidx.cardview.widget.CardView
                    android:layout_marginEnd="@dimen/fifteen"
                    android:layout_marginTop="@dimen/twenty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/twenty"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/rabittail"
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:gravity="center"
                        android:layout_margin="@dimen/ten"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <RadioButton
                    android:id="@+id/rr1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:layout_marginLeft="@dimen/splash_img"
                    android:layout_marginTop="@dimen/onesixty" />

                <RadioButton
                    android:id="@+id/dt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    
                    android:layout_marginEnd="@dimen/splash_img"
                    android:layout_marginTop="@dimen/onesixty" />

                <androidx.cardview.widget.CardView
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/fifteen"
                    android:layout_marginTop="@dimen/onethirty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/twenty">

                    <ImageView
                        android:id="@+id/rabit"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:layout_margin="@dimen/ten" />

                </androidx.cardview.widget.CardView>

                <RadioButton
                    android:id="@+id/er1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:layout_marginLeft="@dimen/splash_img"
                    android:layout_marginTop="@dimen/twoseventy" />

                <RadioButton
                    android:id="@+id/pt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/splash_img"
                    android:layout_marginTop="@dimen/twoseventy" />

                <androidx.cardview.widget.CardView
                    android:layout_marginEnd="@dimen/fifteen"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/onethirty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/twenty"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/dogtail"
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:gravity="center"
                        android:layout_margin="@dimen/ten"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginStart="@dimen/fifteen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twoforty"
                    app:cardCornerRadius="@dimen/twenty">

                    <ImageView
                        android:id="@+id/elephant3"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:layout_margin="@dimen/ten" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginEnd="@dimen/fifteen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/twenty"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/twoforty"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/pigtail"
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:gravity="center"
                        android:layout_margin="@dimen/ten"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginStart="@dimen/fifteen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/threefifty"
                    app:cardCornerRadius="@dimen/twenty">

                    <ImageView
                        android:id="@+id/pig"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:layout_margin="@dimen/ten" />

                </androidx.cardview.widget.CardView>

                <RadioButton
                    android:id="@+id/pr1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:layout_marginLeft="@dimen/splash_img"
                    android:layout_marginTop="@dimen/threeeighty" />

                <RadioButton
                    android:id="@+id/et1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    
                    android:layout_marginEnd="@dimen/splash_img"
                    android:layout_marginTop="@dimen/threeeighty" />

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/threefifty"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="@dimen/fifteen"
                    android:layout_alignParentEnd="true"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:cardCornerRadius="@dimen/twenty">

                    <ImageView
                        android:id="@+id/elephanttail"
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:gravity="center"
                        android:layout_margin="@dimen/ten"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <RadioButton
                    android:id="@+id/dr1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:layout_marginLeft="@dimen/splash_img"
                    android:layout_marginTop="@dimen/fourninty" />

                <RadioButton
                    android:id="@+id/mt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/splash_img"
                    android:layout_marginTop="@dimen/fourninty" />

                <androidx.cardview.widget.CardView
                    android:layout_marginStart="@dimen/fifteen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/foursixty"
                    app:cardCornerRadius="@dimen/twenty">

                    <ImageView
                        android:id="@+id/dog"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:layout_margin="@dimen/ten" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginEnd="@dimen/fifteen"
                    android:layout_marginTop="@dimen/foursixty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    app:cardCornerRadius="@dimen/twenty">

                    <ImageView
                        android:id="@+id/monkeytail"
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="@dimen/seventyfive"
                        android:gravity="center"
                        android:layout_margin="@dimen/ten"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fiveseventy"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/match_num"
                        android:layout_width="150sp"
                        android:layout_margin="@dimen/twenty"
                        android:layout_gravity="right"
                        android:layout_height="@dimen/fifty"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="@dimen/twenty">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/next"
                                android:textColor="@android:color/white"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="@dimen/twenty"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/forwardwhite"
                                android:layout_marginRight="@dimen/five"
                                android:layout_marginEnd="@dimen/five"
                                android:layout_gravity="center_vertical"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>